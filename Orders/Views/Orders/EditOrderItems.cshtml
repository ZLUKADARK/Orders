@model Orders.ViewModels.OrderItem.OrderItemViewModel
@{
    ViewData["Title"] = "EditOrderItems";
}

<h1>@Model.Name</h1>

<br />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditOrderItems" class="form-control border-dark">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input disabled="disabled" hidden="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Наименование</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Количество</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Unit" class="control-label">Единицы измерения</label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-success" />
                <input type="submit" value="Отменить" asp-action="Index" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>
