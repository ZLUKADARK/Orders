@model IEnumerable<Orders.ViewModels.Orders.OrderTableViewModel>
@{ 

}
<table class="table">
    <thead>
        <tr>
            <th>
                Номер
            </th>
            <th>
                Дата
            </th>
            <th>
                Поставщик
            </th>
            <th>
                Название заказа
            </th>
            <th>
                Количество
            </th>
            <th>
                Единица измерения
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="DetailsOrder" asp-route-id="@item.OrderId">@Html.DisplayFor(modelItem => item.Number)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderName)
                </td>
                <td>
                    <a asp-action="DetailsOrderItem" asp-route-id="@item.OrderItemId">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    <button onclick="location.href='@Url.Action("DeleteOrderItem", "Orders", new { id = item.OrderItemId })'" type="button" class="btn btn-outline-danger btn-sm" ->Удалить</button>
                </td>
            </tr>
        }
    </tbody>
</table>
