@model Orders.ViewModels.OrderItem.OrderItemViewModel
@{
    ViewData["Title"] = "CreateOrderItem";
}

<h1>Элементы заказа</h1>
<br />
@{ if (ViewBag.ErrorMessage != null)
    {
        <h7 class="text-danger">@ViewBag.ErrorMessage</h7>
    }
}
<br />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateOrderItem" class="form-control border-dark">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Наименование</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Количество</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Unit" class="control-label">Единицы измерения</label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="OrderId" class="control-label">Номер заказа</label>
                <select asp-for="OrderId" asp-items="ViewBag.Orders" class="form-control"></select>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" asp-route-next="false" class="btn btn-outline-success" />
                <input type="submit" value="Добавить" asp-action="CreateOrderItem" asp-route-next="true" class="btn btn-outline-primary" />
                <input type="button" value="Отменить" onclick="location.href='@Url.Action("Index", "Orders")'" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>
