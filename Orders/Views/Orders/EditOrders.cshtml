@model Orders.ViewModels.Orders.OrderViewModel
@{
    ViewData["Title"] = "EditOrders";
}

<h4>@Model.Number</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrders">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input disabled="disabled" hidden="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label">Номер</label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProviderId" class="control-label">Поставщик</label>
                <select asp-for="ProviderId" asp-items="ViewBag.Providers" class="form-control"></select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>